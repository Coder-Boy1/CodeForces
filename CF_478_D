#include <bits/stdc++.h>

using namespace std;

#define ll long long

#define mod 1000000007

ll gcd(ll aa,ll bb) { if(aa==0) return bb; return(bb%aa,aa); }

int dp[200005];
int dp1[200005];



int main()
{
    ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);
   
    ll r,g;
    cin>>r>>g;
    
    ll ans=1;
    
    if(r>0)
            dp[0]=1;
    if(g>0)
            dp[1]=1;
    
    
    for(ll i=2;i<=1000;i++)
    {    
        for(ll j=0;j<=g;j++)
        {
            dp1[j]=0;
              if(j>=i)
                dp1[j]+=dp[j-i];
            
            ll req=i*(i+1);
            req/=2;
            req-=j;
           
     
            if(req<=r)
            {
                dp1[j]+=dp[j];
            }
            else
            {
                dp1[j]=0;
            }
         
            dp1[j]%=mod;
            if(dp1[j]!=0)
                ans=i;
        }    
        if(ans!=i)
            break;
        
        for(int j=0;j<=g;j++)
            dp[j]=dp1[j];
        
    }
    ll a=0;
    for(int i=0;i<=g;i++)
    {
        a+=dp[i];
        a%=mod;
    }
    cout<<a<<endl;
    
    
    
    return 0;
}
